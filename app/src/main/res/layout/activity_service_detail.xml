<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F6"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetailHomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0C0C0D"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20sp"
            android:textColor="#100F0F"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/tvDetailRentPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent Price"
            android:textSize="20sp"
            android:textColor="#0A0A0B"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/tvDetailBedrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bedrooms"
            android:textSize="20sp"
            android:textColor="#0B0C0D"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/tvDetailContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="20sp"
            android:textColor="#0A0B0B"
            android:layout_marginBottom="18dp" />

    </LinearLayout>
</ScrollView>
